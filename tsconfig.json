{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "@nuxtjs/google-analytics",
      "@types/jest"
    ],
    "plugins": [
      {"name":  "typescript-tslint-plugin"}
    ]
  },
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist",
    "./*/Old"
  ],
}
